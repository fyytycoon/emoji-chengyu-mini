/* pages/levels/levels.wxss */
.container {
  height: 100vh;
  display: flex;
  flex-direction: column;
  background-color: #f8f9fa;
  padding-bottom: 40rpx;
  width: 100%;
}

.nav-bar {
  height: 80rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 0 20rpx;
  background-color: #ffffff;
  box-shadow: 0 2px 5px rgba(0,0,0,0.05);
}

.back-btn {
  width: 32px;
  height: 32px;
  display: flex;
  justify-content: center;
  align-items: center;
}

.back-icon {
  font-size: 18px;
}

.title {
  font-size: 18px;
  font-weight: bold;
  color: #111827;
}

.placeholder {
  width: 32px;
}

.difficulty-tabs {
  display: flex;
  justify-content: space-around;
  padding: 30rpx;
}

.tab {
  padding: 16rpx 32rpx;
  border-radius: 40rpx;
  font-size: 30rpx;
  color: #6b7280;
  background-color: #f3f4f6;
}

.tab.active {
  color: #ffffff;
  background: linear-gradient(135deg, #4F46E5 0%, #3730A3 100%);
  box-shadow: 0 2rpx 8rpx rgba(79, 70, 229, 0.3);
}

.progress-container {
  padding: 32rpx;
  margin-bottom: 32rpx;
  width: 80%;
}

.progress-text {
  text-align: center;
  margin-bottom: 16rpx;
  font-size: 30rpx;
  color: #6b7280;
}

.progress-bar-bg {
  height: 12rpx;
  background-color: #e5e7eb;
  border-radius: 9rpx;
  overflow: hidden;
}

.progress-bar {
  height: 100%;
  background: linear-gradient(90deg, #4F46E5 0%, #6366F1 100%);
  border-radius: 3px;
  transition: width 0.3s;
}

.levels-grid {
  flex: 1;
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
  overflow-y: auto;
  margin: 8rpx 32rpx;
} 
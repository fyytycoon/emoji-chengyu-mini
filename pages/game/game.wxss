/* pages/game/game.wxss */
.container {
  height: 100vh;
  display: flex;
  flex-direction: column;
  background-color: var(--gray-light);
  padding: 0 16px 16px 16px;
  overflow-y: auto;
  box-sizing: border-box;
}

.status-bar {
  height: 44px;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.time-badge {
  display: flex;
  align-items: center;
  padding: 6px 12px;
  background-color: var(--white);
  border-radius: 16px;
  font-size: 14px;
  color: var(--text-secondary);
  box-shadow: 0 2px 6px rgba(0,0,0,0.05);
}

.time-icon {
  margin-right: 4px;
}

.nav-bar {
  height: 44px;
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 12px;
}

.back-btn {
  width: 32px;
  height: 32px;
  display: flex;
  justify-content: center;
  align-items: center;
}

.back-icon {
  font-size: 18px;
}

.level-title {
  font-size: 18px;
  font-weight: bold;
}

.coins-display {
  display: flex;
  align-items: center;
  padding: 6px 12px;
  background: linear-gradient(135deg, #FBBF24 0%, #F59E0B 100%);
  border-radius: 16px;
  font-size: 14px;
  color: white;
  box-shadow: 0 2px 6px rgba(245, 158, 11, 0.3);
}

.coins-icon {
  margin-right: 4px;
}

.difficulty-badge {
  align-self: flex-start;
  display: flex;
  align-items: center;
  padding: 6px 12px;
  background: linear-gradient(135deg, #0EA5E9 0%, #0284C7 100%);
  border-radius: 16px;
  font-size: 14px;
  font-weight: bold;
  color: white;
  box-shadow: 0 2px 6px rgba(2, 132, 199, 0.3);
  margin-bottom: 16px;
}

.difficulty-icon {
  margin-right: 4px;
}

.emoji-container {
  display: flex;
  flex-wrap: wrap;
  justify-content: center;
  gap: 8px;
  margin-bottom: 20px;
  width: 100%;
  padding: 0 5px;
  box-sizing: border-box;
}

.answer-area {
  margin-bottom: 20px;
  width: 100%;
}

.answer-hint {
  text-align: center;
  font-size: 14px;
  color: var(--text-secondary);
  margin-bottom: 10px;
  display: block;
}

.answer-box {
  display: flex;
  justify-content: center;
  flex-wrap: wrap;
  gap: 8px;
  margin: 0 auto;
  max-width: 95%;
}

.answer-char {
  width: 42px;
  height: 42px;
  border-radius: 10px;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 18px;
  font-weight: bold;
  background: white;
  box-shadow: 0 2px 8px rgba(0,0,0,0.08);
  border: 2px solid var(--gray);
  margin-bottom: 5px;
}

.answer-char.filled {
  border-color: var(--primary-color);
  background: linear-gradient(135deg, var(--primary-light) 0%, #EDE9FE 100%);
}

.submit-button {
  background: linear-gradient(135deg, var(--primary-color) 0%, var(--primary-dark) 100%);
  color: white;
  border-radius: 12px;
  padding: 14px 0;
  font-weight: bold;
  text-align: center;
  box-shadow: 0 4px 12px rgba(79, 70, 229, 0.3);
  margin-bottom: 24px;
} 
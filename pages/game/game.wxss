/* pages/game/game.wxss */
.container {
  height: 100vh;
  display: flex;
  flex-direction: column;
  background-color: var(--gray-light);
  padding: 0 16rpx 16rpx 16rpx;
  overflow-y: auto;
  box-sizing: border-box;
}

.status-bar {
  height: 44rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.time-badge {
  display: flex;
  align-items: center;
  padding: 6rpx 12rpx;
  background-color: var(--white);
  border-radius: 16rpx;
  font-size: 14rpx;
  color: var(--text-secondary);
  box-shadow: 0 2rpx 6rpx rgba(0,0,0,0.05);
}

.time-icon {
  margin-right: 4rpx;
}

.nav-bar {
  height: 84rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 50rpx;
}

.back-btn {
  width: 32rpx;
  height: 32rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}

.back-icon {
  font-size: 40rpx;
}

.level-title {
  font-size: 40rpx;
  font-weight: bold;
}

.coins-display {
  display: flex;
  align-items: center;
  padding: 6rpx 12rpx;
  background: linear-gradient(135deg, #FBBF24 0%, #F59E0B 100%);
  border-radius: 16rpx;
  font-size: 14rpx;
  color: white;
  box-shadow: 0 2rpx 6rpx rgba(245, 158, 11, 0.3);
}

.coins-icon {
  margin-right: 4rpx;
}

.difficulty-badge {
  align-self: flex-start;
  display: flex;
  align-items: center;
  padding: 6rpx 12rpx;
  background: linear-gradient(135deg, #0EA5E9 0%, #0284C7 100%);
  border-radius: 16rpx;
  font-size: 14rpx;
  font-weight: bold;
  color: white;
  box-shadow: 0 2rpx 6rpx rgba(2, 132, 199, 0.3);
  margin-bottom: 16rpx;
}

.difficulty-icon {
  margin-right: 4rpx;
}

.emoji-container {
  display: flex;
  flex-wrap: wrap;
  justify-content: center;
  gap: 8rpx;
  margin-bottom: 50rpx;
  width: 100%;
  padding: 0 5rpx;
  box-sizing: border-box;
}

.answer-area {
  margin-bottom: 50rpx;
  width: 100%;
}

.answer-hint {
  text-align: center;
  font-size: 30rpx;
  color: var(--text-secondary);
  margin-bottom: 10rpx;
  display: block;
}

.answer-box {
  display: flex;
  justify-content: center;
  flex-wrap: wrap;
  gap: 8rpx;
  margin: 0 auto;
  max-width: 95%;
}

.answer-char {
  width: 102rpx;
  height: 102rpx;
  border-radius: 10rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 40rpx;
  font-weight: bold;
  background: white;
  box-shadow: 0 2rpx 8rpx rgba(0,0,0,0.08);
  border: 2rpx solid var(--gray);
  margin-bottom: 15rpx;
  margin-left: 15rpx;
}

.answer-char.filled {
  border-color: var(--primary-color);
  background: linear-gradient(135deg, var(--primary-light) 0%, #EDE9FE 100%);
}

.submit-button {
  background: linear-gradient(135deg, var(--primary-color) 0%, var(--primary-dark) 100%);
  color: white;
  border-radius: 12rpx;
  font-weight: bold;
  text-align: center;
  box-shadow: 0 4rpx 12rpx rgba(79, 70, 229, 0.3);
  margin-bottom: 24rpx;
} 
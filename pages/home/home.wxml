<view class="container">
  <!-- 顶部 Header -->
  <view class="header">
    <view class="header-title">成语挑战</view>
    <!-- 可以考虑在这里放一个小的背景图案或颜色 -->
  </view>

  <!-- 游戏模式区域 -->
  <view class="game-modes-area">
    <!-- Emoji 猜成语分类 -->
    <view class="category-section">
      <view class="category-divider">
        <text class="category-title">Emoji 猜成语</text>
      </view>
      
      <view class="mode-card emoji-mode" bindtap="startEmojiClassic">
        <view class="mode-icon">🧩</view>
        <view class="mode-info">
          <view class="mode-title">经典模式</view>
          <view class="mode-description">挑战emoji猜成语关卡</view>
        </view>
        <view class="mode-action">▶</view> 
      </view>
    </view>

    <!-- 拼音 猜成语分类 -->
    <view class="category-section">
      <view class="category-divider">
        <text class="category-title">拼音 猜成语</text>
      </view>

      <view class="mode-card pinyin-mode" bindtap="startPinyinDaily">
        <view class="mode-icon">📆</view>
        <view class="mode-info">
          <view class="mode-title">每日挑战</view>
          <view class="mode-description">每日一道拼音题</view>
        </view>
        <view class="mode-action">▶</view> 
      </view>
    </view>
  </view>

</view>
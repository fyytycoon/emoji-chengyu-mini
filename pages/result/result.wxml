<view class="container">

  <!-- 结果内容 -->
  <view class="result-container">
    <!-- 成功标志 -->
    <view class="success-icon">🎉</view>
    
    <!-- 成语结果 -->
    <view class="idiom-result">
      <view class="idiom-text">{{idiom}}</view>
      <view class="idiom-hint">{{hint}}</view>
    </view>
    
    <!-- 按钮区域 -->
    <view class="button-group">
      <button class="btn-primary" bindtap="continueGame">继续下一关</button>
      <button class="btn-secondary" bindtap="backToLevels">返回关卡</button>
      <button class="btn-share" open-type="share" bindtap="shareResult">分享战绩</button>
    </view>
  </view>
</view> 
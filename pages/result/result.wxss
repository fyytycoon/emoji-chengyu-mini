/* pages/result/result.wxss */
.container {
  height: 100vh;
  display: flex;
  flex-direction: column;
  background: linear-gradient(135deg, var(--primary-light) 0%, #EDE9FE 100%);
}

.result-container {
  width: 100%;
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 20px;
}

.success-icon {
  font-size: 72px;
  margin-bottom: 30px;
}

.idiom-result {
  margin-bottom: 40px;
  text-align: center;
}

.idiom-text {
  font-size: 32px;
  font-weight: bold;
  color: var(--primary-color);
  margin-bottom: 10px;
}

.idiom-hint {
  font-size: 14px;
  color: var(--text-secondary);
  line-height: 1.5;
  max-width: 320px;
}

.score-container {
  width: 100%;
  background-color: var(--white);
  border-radius: 16px;
  padding: 20px;
  margin-bottom: 30px;
  box-shadow: 0 4px 16px rgba(0,0,0,0.08);
}

.score-total {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-bottom: 20px;
  position: relative;
}

.score-total:after {
  content: '';
  position: absolute;
  bottom: -10px;
  left: 20%;
  right: 20%;
  height: 1px;
  background-color: var(--gray);
}

.score-value {
  font-size: 48px;
  font-weight: bold;
  color: var(--primary-color);
}

.score-label {
  font-size: 16px;
  color: var(--text-secondary);
}

.score-details {
  display: flex;
  justify-content: space-around;
}

.score-item {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.item-value {
  font-size: 18px;
  font-weight: bold;
  color: var(--text-color);
  margin-bottom: 4px;
}

.item-label {
  font-size: 12px;
  color: var(--text-secondary);
}

.button-group {
  width: 100%;
  margin-bottom: 20px;
}

.btn-primary {
  background: linear-gradient(135deg, var(--primary-color) 0%, var(--primary-dark) 100%);
  color: white;
  border-radius: 12px;
  padding: 0px 0;
  font-weight: bold;
  text-align: center;
  margin: 20px 90px;
}

.btn-secondary {
  background: white;
  color: var(--primary-color);
  border: 1px solid var(--primary-color);
  border-radius: 12px;
  padding: 0px 0;
  font-weight: bold;
  text-align: center;
  margin: 20px 90px;
}

.btn-share {
  background: linear-gradient(135deg, var(--accent-color) 0%, var(--accent-dark) 100%);
  color: white;
  border-radius: 12px;
  padding: 0px 0;
  font-weight: bold;
  text-align: center;
  margin: 20px 90px;
}

.coins-display {
  display: flex;
  align-items: center;
  font-size: 16px;
  color: var(--text-secondary);
}

.coins-icon {
  font-size: 20px;
  margin-right: 8px;
} 
/* pages/splash/splash.wxss */
.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 100vh;
  background: linear-gradient(135deg, #4F46E5 0%, #4338CA 100%);
}

.splash-content {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  width: 80%;
}

.splash-emoji {
  font-size: 72px;
  margin-bottom: 30px;
}

.splash-title {
  font-size: 36px;
  font-weight: bold;
  color: white;
  margin-bottom: 15px;
}

.splash-subtitle {
  font-size: 16px;
  color: rgba(255, 255, 255, 0.8);
  margin-bottom: 50px;
  text-align: center;
}

.loading-bar {
  width: 100%;
  height: 6px;
  background-color: rgba(255, 255, 255, 0.2);
  border-radius: 3px;
  overflow: hidden;
}

.loading-progress {
  height: 100%;
  width: 30%;
  background-color: white;
  border-radius: 3px;
  animation: loading 2s linear forwards;
}

@keyframes loading {
  0% {
    width: 0;
  }
  100% {
    width: 100%;
  }
} 
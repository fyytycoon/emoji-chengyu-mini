/* pages/splash/splash.wxss */
.container {
  height: 100vh;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  background-color: #f8f9fa;
}

.splash-content {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  width: 80%;
  text-align: center;
}

.splash-logo {
  font-size: 88rpx;
  margin-bottom: 30rpx;
  animation: pulse 1.5s infinite;
}

.splash-title {
  font-size: 48rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
}

.splash-subtitle {
  font-size: 32rpx;
  color: #666;
  margin-bottom: 60rpx;
}

.loading-bar {
  width: 100%;
  height: 8rpx;
  background-color: #eee;
  border-radius: 4rpx;
  overflow: hidden;
  margin-bottom: 50rpx;
}

.loading-progress {
  height: 100%;
  background-color: #4caf50;
  border-radius: 4rpx;
}

.version-text {
  font-size: 24rpx;
  color: #999;
  margin-top: 20rpx;
}

@keyframes loading {
  0% {
    width: 0;
  }
  100% {
    width: 100%;
  }
}

@keyframes pulse {
  0% {
    transform: scale(1);
    opacity: 1;
  }
  50% {
    transform: scale(1.1);
    opacity: 0.8;
  }
  100% {
    transform: scale(1);
    opacity: 1;
  }
} 
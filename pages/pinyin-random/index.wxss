.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 30rpx;
  min-height: 100vh;
  background-color: #f5f7fa;
}

/* 顶部信息栏 */
.header {
  display: flex;
  justify-content: space-between;
  width: 100%;
  margin-bottom: 40rpx;
}

.timer {
  display: flex;
  align-items: center;
  background-color: #ffffff;
  padding: 15rpx 30rpx;
  border-radius: 12rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
}

.timer-icon {
  margin-right: 10rpx;
  font-size: 36rpx;
}

.timer-text {
  font-weight: bold;
  font-size: 32rpx;
}

.score-container {
  display: flex;
}

.score-item {
  display: flex;
  align-items: center;
  background-color: #ffffff;
  padding: 15rpx 25rpx;
  border-radius: 12rpx;
  margin-left: 20rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
}

.score-icon {
  margin-right: 10rpx;
  font-size: 32rpx;
}

.score-value {
  font-weight: bold;
  font-size: 32rpx;
}

/* 拼音提示区域 */
.pinyin-container {
  display: flex;
  justify-content: center;
  width: 100%;
  margin-bottom: 40rpx;
  padding: 20rpx 30rpx;
  background-color: #ffffff;
  border-radius: 16rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.08);
}

.pinyin-item {
  min-width: 80rpx;
  text-align: center;
  font-size: 30rpx;
  padding: 10rpx 20rpx;
  margin: 0 10rpx;
  color: #5a6066;
}

/* 答案区域 */
.answer-container {
  display: flex;
  justify-content: center;
  width: 100%;
  margin-bottom: 50rpx;
}

.answer-box {
  width: 90rpx;
  height: 90rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 44rpx;
  margin: 0 10rpx;
  background-color: #ffffff;
  border: 2rpx solid #dde0e4;
  border-radius: 10rpx;
  box-shadow: 0 2rpx 6rpx rgba(0, 0, 0, 0.05);
  transition: all 0.2s;
}

.answer-box.filled {
  border-color: #4a8eff;
  box-shadow: 0 2rpx 8rpx rgba(74, 142, 255, 0.2);
}

/* 键盘区域 */
.keyboard-container {
  display: flex;
  flex-wrap: wrap;
  justify-content: center;
  width: 100%;
  margin-bottom: 50rpx;
}

.key-button {
  width: 80rpx;
  height: 80rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 40rpx;
  margin: 10rpx;
  background-color: #ffffff;
  border-radius: 10rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
  transition: all 0.2s;
}

.key-button:active {
  transform: scale(0.95);
  background-color: #f0f2f5;
}

.key-button.backspace {
  width: 100rpx;
  background-color: #f0f2f5;
}

/* 操作按钮 */
.action-buttons {
  display: flex;
  justify-content: space-around;
  width: 100%;
  margin-top: 20rpx;
}

.hint-button, .next-button, .home-button {
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 20rpx 40rpx;
  background-color: #ffffff;
  border-radius: 12rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.08);
  font-size: 32rpx;
}

.hint-button {
  background-color: #fff8e6;
}

.hint-icon {
  margin-right: 10rpx;
}

.next-button {
  background-color: #e6f4ff;
}

.home-button {
  background-color: #f0f2f5;
}

/* 游戏结果遮罩 */
.result-overlay {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
  background-color: rgba(0, 0, 0, 0.6);
  z-index: 999;
}

.result-container {
  width: 80%;
  padding: 50rpx 40rpx;
  background-color: #ffffff;
  border-radius: 20rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.12);
}

.result-container.correct {
  border-top: 12rpx solid #52c41a;
}

.result-container.wrong {
  border-top: 12rpx solid #ff4d4f;
}

.result-icon {
  font-size: 80rpx;
  margin-bottom: 20rpx;
}

.result-title {
  font-size: 44rpx;
  font-weight: bold;
  margin-bottom: 30rpx;
}

.result-idiom {
  font-size: 36rpx;
  margin-bottom: 20rpx;
}

.result-hint {
  font-size: 30rpx;
  color: #666;
  margin-bottom: 40rpx;
  text-align: center;
}

.result-buttons {
  display: flex;
  width: 100%;
  justify-content: space-around;
}

.result-button {
  width: 45%;
  font-size: 32rpx;
  padding: 16rpx 0;
} 
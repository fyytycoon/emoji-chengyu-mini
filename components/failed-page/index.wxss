:host {
  display: block;
  padding: 48rpx 32rpx;
}
.dizzy {
  margin: 0 auto 32rpx;
  width: 116rpx;
  height: 116rpx;
  opacity: 0.5;
  display: block;
}
.text-center {
  text-align: center;
}
.mb-16 {
  margin-bottom: 32rpx;
}
.btns {
  display: flex;
  justify-content: center;
  align-items: center;
}
.continue {
  margin-left: 0;
  margin-right: 32rpx;
  height: 64rpx;
  padding: 0 32rpx;
  background: #0d828e;
  color: #fff;
  font-size: 32rpx;
  line-height: 64rpx;
  border-radius: 8rpx;
  opacity: 0.9;
}
.continue::after {
  border: none;
}
.continue-active {
  opacity: 1;
}
.answer {
  opacity: 0.75;
  padding-left: 48rpx;
  position: relative;
}
.answer-active {
  opacity: 1;
  color: #0d828e;
}
.answer::before {
  content: '';
  position: absolute;
  top: 4rpx;
  left: 0;
  width: 40rpx;
  height: 40rpx;
  background-size: 100% 100%;
  background-image: url('data:image/svg+xml;base64,');
}
.answer-active::before {
  background-image: url('data:image/svg+xml;base64,');
}

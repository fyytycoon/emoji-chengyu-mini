.base {
  width: 160rpx;
  height: 160rpx;
  box-sizing: border-box;
  border: 4rpx solid rgba(156, 163, 175, 0.1);
  position: relative;
}
.ok {
  color: #fff;
  border-color: transparent;
  background: #1d9c9c;
}
.normal {
  border-color: transparent;
  background: rgba(156, 163, 175, 0.08);
}
.text-ok {
  color: #1d9c9c;
}
.text-mis {
  color: #de7525;
}
.op80 {
  opacity: 0.8;
}
.op35 {
  opacity: 0.35;
}
.op30 {
  opacity: 0.3;
}
.char-mask {
  background: currentcolor;
  opacity: 0.7;
  border: 1px solid currentcolor;
}
.tone-mask {
  background: currentcolor;
  opacity: 0.4;
  border: 1px solid currentcolor;
}
.line-through {
  text-decoration: line-through;
}
.zy-char {
  position: absolute;
  top: 0;
  bottom: 0;
  font-size: 60rpx;
  line-height: 160rpx;
  font-family: ui-serif, Georgia, Cambria, 'Times New Roman', Times, serif;
}
.char {
  position: absolute;
  left: 46rpx;
  width: 60rpx;
  font-size: 60rpx;
  line-height: 1;
  text-align: center;
  font-family: ui-serif, Georgia, Cambria, 'Times New Roman', Times, serif;
}
.left-8 {
  left: 16rpx;
}
.left-16 {
  left: 32rpx;
}
.top-11 {
  top: 22rpx;
}
.top-14 {
  top: 28rpx;
}
.top-32 {
  top: 64rpx;
}
.top-34 {
  top: 68rpx;
}
.right-8 {
  right: 16rpx;
}
.right-10 {
  right: 20rpx;
}
.zy-tone {
  position: absolute;
  top: 0;
  height: 100%;
  display: flex;
  align-items: center;
}
.zy {
  font-size: 24rpx;
  line-height: 32rpx;
  writing-mode: vertical-rl;
  font-family: ui-serif, Georgia, Cambria, 'Times New Roman', Times, serif;
}
.tone {
  position: absolute;
  left: 0;
  width: 100%;
  display: flex;
  justify-content: center;
  font-size: 32rpx;
  line-height: 1;
  font-family: ui-monospace, SFMono-Regular, Menlo, Monaco, Consolas, 'Liberation Mono', 'Courier New', monospace;
}
.one {
  margin: 0 1px;
}
.part-two {
  margin: 0 1px;
  display: flex;
}
.two {
  position: relative;
}
.zy-symbol-1 {
  width: 12rpx;
  height: 1px;
  background: currentcolor;
}
.zy-symbol-2 {
  width: 12rpx;
  height: 1px;
  background: currentcolor;
  transform: rotate(135deg);
}
.zy-symbol-3 {
  width: 8rpx;
  height: 8rpx;
  border-right: 1px solid currentcolor;
  border-bottom: 1px solid currentcolor;
  transform: rotate(45deg);
}
.zy-symbol-4 {
  width: 12rpx;
  height: 1px;
  background: currentcolor;
  transform: rotate(45deg);
}
.masked-zy-symbol {
  width: 12rpx;
  height: 12rpx;
  margin-left: 4rpx;
  background: currentcolor;
}
.symbol-1 {
  width: 12rpx;
  height: 1px;
  background: currentcolor;
  position: absolute;
  top: -4rpx;
  left: 50%;
  transform: translateX(-50%);
}
.symbol-2 {
  width: 12rpx;
  height: 1px;
  background: currentcolor;
  position: absolute;
  top: -4rpx;
  left: 50%;
  transform: translateX(-50%) rotate(135deg);
}
.symbol-3 {
  width: 8rpx;
  height: 8rpx;
  border-right: 1px solid currentcolor;
  border-bottom: 1px solid currentcolor;
  position: absolute;
  top: -12rpx;
  left: 50%;
  transform: translateX(-50%) rotate(45deg);
}
.symbol-4 {
  width: 12rpx;
  height: 1px;
  background: currentcolor;
  position: absolute;
  top: -4rpx;
  left: 50%;
  transform: translateX(-50%) rotate(45deg);
}
.masked-symbol {
  width: 16rpx;
  height: 16rpx;
  background: currentcolor;
  position: absolute;
  top: -24rpx;
  left: 50%;
  transform: translateX(-50%);
}
.num-tone {
  align-self: flex-start;
  font-size: 24rpx;
  line-height: 1;
  margin-top: -8rpx;
  margin-left: 4rpx;
}
